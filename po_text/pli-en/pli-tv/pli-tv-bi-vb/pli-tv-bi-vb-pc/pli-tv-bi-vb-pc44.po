#. HTML: </p><h1>
msgctxt "pli-tv-bi-vb-pc44:0.5"
msgid "44. Gihiveyyāvaccasikkhāpada"
msgstr ""

#. HTML: </h1></div><p>
#. REF: sc1
msgctxt "pli-tv-bi-vb-pc44:6.1"
msgid "Tena samayena buddho bhagavā sāvatthiyaṃ viharati jetavane anāthapiṇḍikassa ārāme."
msgstr ""

msgctxt "pli-tv-bi-vb-pc44:6.2"
msgid "Tena kho pana samayena bhikkhuniyo gihiveyyāvaccaṃ karonti."
msgstr ""

msgctxt "pli-tv-bi-vb-pc44:6.3"
msgid "Yā tā bhikkhuniyo appicchā … pe …"
msgstr ""

msgctxt "pli-tv-bi-vb-pc44:6.4"
msgid "tā ujjhāyanti khiyyanti vipācenti—"
msgstr ""

msgctxt "pli-tv-bi-vb-pc44:6.5"
msgid "“kathañhi nāma bhikkhuniyo gihiveyyāvaccaṃ karissantī”ti … pe …"
msgstr ""

msgctxt "pli-tv-bi-vb-pc44:6.6"
msgid "“saccaṃ kira, bhikkhave, bhikkhuniyo gihiveyyāvaccaṃ karontī”ti?"
msgstr ""

msgctxt "pli-tv-bi-vb-pc44:6.7"
msgid "“Saccaṃ, bhagavā”ti."
msgstr ""

msgctxt "pli-tv-bi-vb-pc44:6.8"
msgid "Vigarahi buddho bhagavā … pe …"
msgstr ""

msgctxt "pli-tv-bi-vb-pc44:6.9"
msgid "kathañhi nāma, bhikkhave, bhikkhuniyo gihiveyyāvaccaṃ karissanti."
msgstr ""

msgctxt "pli-tv-bi-vb-pc44:6.10"
msgid "Netaṃ, bhikkhave, appasannānaṃ vā pasādāya … pe …"
msgstr ""

msgctxt "pli-tv-bi-vb-pc44:6.11"
msgid "evañca pana, bhikkhave, bhikkhuniyo imaṃ sikkhāpadaṃ uddisantu—"
msgstr ""

#. HTML: </p><p><b class="rule">
#. REF: sc2
msgctxt "pli-tv-bi-vb-pc44:7.1"
msgid "“Yā pana bhikkhunī gihiveyyāvaccaṃ kareyya, pācittiyan”ti."
msgstr ""

#. HTML: </b></p><p><b>
#. REF: sc3
msgctxt "pli-tv-bi-vb-pc44:8.1"
msgid "Yā panāti"
msgstr ""

#. HTML: </b>
msgctxt "pli-tv-bi-vb-pc44:8.2"
msgid "yā yādisā … pe …"
msgstr ""

#. HTML: <b>
msgctxt "pli-tv-bi-vb-pc44:8.3"
msgid "bhikkhunīti"
msgstr ""

#. HTML: </b>
msgctxt "pli-tv-bi-vb-pc44:8.4"
msgid "… pe …"
msgstr ""

msgctxt "pli-tv-bi-vb-pc44:8.5"
msgid "ayaṃ imasmiṃ atthe adhippetā bhikkhunīti."
msgstr ""

#. HTML: </p><p><b>
#. REF: sc4, pts-vp-pli4.301
msgctxt "pli-tv-bi-vb-pc44:9.1"
msgid "Gihiveyyāvaccaṃ nāma"
msgstr ""

#. HTML: </b>
msgctxt "pli-tv-bi-vb-pc44:9.2"
msgid "agārikassa yāguṃ vā bhattaṃ vā khādanīyaṃ vā pacati, sāṭakaṃ vā veṭhanaṃ vā dhovati, āpatti pācittiyassa."
msgstr ""

#. HTML: </p><p>
#. REF: sc5
msgctxt "pli-tv-bi-vb-pc44:10.1"
msgid "Anāpatti—"
msgstr ""

msgctxt "pli-tv-bi-vb-pc44:10.2"
msgid "yāgupāne, saṃghabhatte, cetiyapūjāya, attano veyyāvaccakarassa yāguṃ vā bhattaṃ vā khādanīyaṃ vā pacati, sāṭakaṃ vā veṭhanaṃ vā dhovati, ummattikāya, ādikammikāyāti."
msgstr ""

#. HTML: </p><p class="endsutta">
#. REF: sc6
msgctxt "pli-tv-bi-vb-pc44:11.1"
msgid "Catutthasikkhāpadaṃ niṭṭhitaṃ."
msgstr ""
