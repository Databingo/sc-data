#. HTML: </p><h1>
msgctxt "pli-tv-bi-vb-pc31:0.5"
msgid "31. Ekamañcatuvaṭṭanasikkhāpada"
msgstr ""

#. HTML: </h1></div><p>
#. REF: sc1
msgctxt "pli-tv-bi-vb-pc31:6.1"
msgid "Tena samayena buddho bhagavā sāvatthiyaṃ viharati jetavane anāthapiṇḍikassa ārāme."
msgstr ""

msgctxt "pli-tv-bi-vb-pc31:6.2"
msgid "Tena kho pana samayena bhikkhuniyo dve ekamañce tuvaṭṭenti."
msgstr ""

msgctxt "pli-tv-bi-vb-pc31:6.3"
msgid "Manussā vihāracārikaṃ āhiṇḍantā passitvā ujjhāyanti khiyyanti vipācenti—"
msgstr ""

msgctxt "pli-tv-bi-vb-pc31:6.4"
msgid "“kathañhi nāma bhikkhuniyo dve ekamañce tuvaṭṭessanti, seyyathāpi gihiniyo kāmabhoginiyo”ti."
msgstr ""

#. HTML: </p><p>
#. REF: sc2
msgctxt "pli-tv-bi-vb-pc31:7.1"
msgid "Assosuṃ kho bhikkhuniyo tesaṃ manussānaṃ ujjhāyantānaṃ khiyyantānaṃ vipācentānaṃ."
msgstr ""

msgctxt "pli-tv-bi-vb-pc31:7.2"
msgid "Yā tā bhikkhuniyo appicchā … pe …"
msgstr ""

msgctxt "pli-tv-bi-vb-pc31:7.3"
msgid "tā ujjhāyanti khiyyanti vipācenti—"
msgstr ""

msgctxt "pli-tv-bi-vb-pc31:7.4"
msgid "“kathañhi nāma bhikkhuniyo dve ekamañce tuvaṭṭessantī”ti … pe …"
msgstr ""

msgctxt "pli-tv-bi-vb-pc31:7.5"
msgid "“saccaṃ kira, bhikkhave, bhikkhuniyo dve ekamañce tuvaṭṭentī”ti?"
msgstr ""

msgctxt "pli-tv-bi-vb-pc31:7.6"
msgid "“Saccaṃ, bhagavā”ti."
msgstr ""

msgctxt "pli-tv-bi-vb-pc31:7.7"
msgid "Vigarahi buddho bhagavā … pe …"
msgstr ""

msgctxt "pli-tv-bi-vb-pc31:7.8"
msgid "kathañhi nāma, bhikkhave, bhikkhuniyo dve ekamañce tuvaṭṭessanti."
msgstr ""

msgctxt "pli-tv-bi-vb-pc31:7.9"
msgid "Netaṃ, bhikkhave, appasannānaṃ vā pasādāya … pe …"
msgstr ""

msgctxt "pli-tv-bi-vb-pc31:7.10"
msgid "evañca pana, bhikkhave, bhikkhuniyo imaṃ sikkhāpadaṃ uddisantu—"
msgstr ""

#. HTML: </p><p><b class="rule">
#. REF: sc3, pts-vp-pli4.289
msgctxt "pli-tv-bi-vb-pc31:8.1"
msgid "“Yā pana bhikkhuniyo dve ekamañce tuvaṭṭeyyuṃ, pācittiyan”ti."
msgstr ""

#. HTML: </b></p><p><b>
#. REF: sc4
msgctxt "pli-tv-bi-vb-pc31:9.1"
msgid "Yā panāti"
msgstr ""

#. HTML: </b>
msgctxt "pli-tv-bi-vb-pc31:9.2"
msgid "yā yādisā … pe …"
msgstr ""

#. HTML: <b>
msgctxt "pli-tv-bi-vb-pc31:9.3"
msgid "bhikkhuniyoti"
msgstr ""

#. HTML: </b>
msgctxt "pli-tv-bi-vb-pc31:9.4"
msgid "upasampannāyo vuccanti."
msgstr ""

#. HTML: </p><p><b>
#. REF: sc5
msgctxt "pli-tv-bi-vb-pc31:10.1"
msgid "Dve ekamañce tuvaṭṭeyyunti"
msgstr ""

#. HTML: </b>
msgctxt "pli-tv-bi-vb-pc31:10.2"
msgid "ekāya nipannāya aparā nipajjati, āpatti pācittiyassa."
msgstr ""

msgctxt "pli-tv-bi-vb-pc31:10.3"
msgid "Ubho vā nipajjanti, āpatti pācittiyassa."
msgstr ""

msgctxt "pli-tv-bi-vb-pc31:10.4"
msgid "Uṭṭhahitvā punappunaṃ nipajjanti, āpatti pācittiyassa."
msgstr ""

#. HTML: </p><p>
#. REF: sc6
msgctxt "pli-tv-bi-vb-pc31:11.1"
msgid "Anāpatti—"
msgstr ""

msgctxt "pli-tv-bi-vb-pc31:11.2"
msgid "ekāya nipannāya aparā nisīdati, ubho vā nisīdanti, ummattikānaṃ, ādikammikānanti."
msgstr ""

#. HTML: </p><p class="endsutta">
#. REF: sc7
msgctxt "pli-tv-bi-vb-pc31:12.1"
msgid "Paṭhamasikkhāpadaṃ niṭṭhitaṃ."
msgstr ""
