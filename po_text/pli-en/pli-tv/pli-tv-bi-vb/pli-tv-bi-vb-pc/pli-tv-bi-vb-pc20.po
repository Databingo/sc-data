msgctxt "pli-tv-bi-vb-pc20:0.1"
msgid "Theravāda Vinaya"
msgstr ""

#. HTML: </p><p>
msgctxt "pli-tv-bi-vb-pc20:0.2"
msgid "Bhikkhunivibhaṅga"
msgstr ""

#. HTML: </p><p>
msgctxt "pli-tv-bi-vb-pc20:0.3"
msgid "Pācittiyakaṇḍa"
msgstr ""

#. HTML: </p><p>
msgctxt "pli-tv-bi-vb-pc20:0.4"
msgid "Rattandhakāravagga"
msgstr ""

#. HTML: </p><h1>
msgctxt "pli-tv-bi-vb-pc20:0.5"
msgid "20. Rodanasikkhāpada"
msgstr ""

#. HTML: </h1></div><p>
#. REF: sc1
msgctxt "pli-tv-bi-vb-pc20:6.1"
msgid "Tena samayena buddho bhagavā sāvatthiyaṃ viharati jetavane anāthapiṇḍikassa ārāme."
msgstr ""

msgctxt "pli-tv-bi-vb-pc20:6.2"
msgid "Tena kho pana samayena caṇḍakāḷī bhikkhunī bhikkhunīhi saddhiṃ bhaṇḍitvā attānaṃ vadhitvā vadhitvā rodati."
msgstr ""

msgctxt "pli-tv-bi-vb-pc20:6.3"
msgid "Yā tā bhikkhuniyo appicchā … pe …"
msgstr ""

msgctxt "pli-tv-bi-vb-pc20:6.4"
msgid "tā ujjhāyanti khiyyanti vipācenti—"
msgstr ""

msgctxt "pli-tv-bi-vb-pc20:6.5"
msgid "“kathañhi nāma ayyā caṇḍakāḷī attānaṃ vadhitvā vadhitvā rodissatī”ti … pe …"
msgstr ""

msgctxt "pli-tv-bi-vb-pc20:6.6"
msgid "“saccaṃ kira, bhikkhave, caṇḍakāḷī bhikkhunī attānaṃ vadhitvā vadhitvā rodatī”ti?"
msgstr ""

msgctxt "pli-tv-bi-vb-pc20:6.7"
msgid "“Saccaṃ, bhagavā”ti."
msgstr ""

msgctxt "pli-tv-bi-vb-pc20:6.8"
msgid "Vigarahi buddho bhagavā … pe …"
msgstr ""

msgctxt "pli-tv-bi-vb-pc20:6.9"
msgid "kathañhi nāma, bhikkhave, caṇḍakāḷī bhikkhunī attānaṃ vadhitvā vadhitvā rodissati."
msgstr ""

msgctxt "pli-tv-bi-vb-pc20:6.10"
msgid "Netaṃ, bhikkhave, appasannānaṃ vā pasādāya … pe …"
msgstr ""

msgctxt "pli-tv-bi-vb-pc20:6.11"
msgid "evañca pana, bhikkhave, bhikkhuniyo imaṃ sikkhāpadaṃ uddisantu—"
msgstr ""

#. HTML: </p><p><b class="rule">
#. REF: sc2
msgctxt "pli-tv-bi-vb-pc20:7.1"
msgid "“Yā pana bhikkhunī attānaṃ vadhitvā vadhitvā rodeyya, pācittiyan”ti."
msgstr ""

#. HTML: </b></p><p><b>
#. REF: sc3
msgctxt "pli-tv-bi-vb-pc20:8.1"
msgid "Yā panāti"
msgstr ""

#. HTML: </b>
msgctxt "pli-tv-bi-vb-pc20:8.2"
msgid "yā yādisā … pe …"
msgstr ""

#. HTML: <b>
msgctxt "pli-tv-bi-vb-pc20:8.3"
msgid "bhikkhunīti"
msgstr ""

#. HTML: </b>
msgctxt "pli-tv-bi-vb-pc20:8.4"
msgid "… pe …"
msgstr ""

msgctxt "pli-tv-bi-vb-pc20:8.5"
msgid "ayaṃ imasmiṃ atthe adhippetā bhikkhunīti."
msgstr ""

#. HTML: </p><p><b>
#. REF: sc4
msgctxt "pli-tv-bi-vb-pc20:9.1"
msgid "Attānanti"
msgstr ""

#. HTML: </b>
msgctxt "pli-tv-bi-vb-pc20:9.2"
msgid "paccattaṃ."
msgstr ""

msgctxt "pli-tv-bi-vb-pc20:9.3"
msgid "Vadhitvā vadhitvā rodati, āpatti pācittiyassa."
msgstr ""

msgctxt "pli-tv-bi-vb-pc20:9.4"
msgid "Vadhati na rodati, āpatti dukkaṭassa."
msgstr ""

msgctxt "pli-tv-bi-vb-pc20:9.5"
msgid "Rodati na vadhati, āpatti dukkaṭassa."
msgstr ""

#. HTML: </p><p>
#. REF: sc5
msgctxt "pli-tv-bi-vb-pc20:10.1"
msgid "Anāpatti—"
msgstr ""

msgctxt "pli-tv-bi-vb-pc20:10.2"
msgid "ñātibyasanena vā bhogabyasanena vā rogabyasanena vā phuṭṭhā rodati na vadhati, ummattikāya, ādikammikāyāti."
msgstr ""

#. HTML: </p><p class="endsutta">
#. REF: sc6
msgctxt "pli-tv-bi-vb-pc20:11.1"
msgid "Dasamasikkhāpadaṃ niṭṭhitaṃ."
msgstr ""

#. HTML: <br>
msgctxt "pli-tv-bi-vb-pc20:11.2"
msgid "Andhakāravaggo dutiyo."
msgstr ""
