#. HTML: <section class="sutta" id="thag2.20"><article><div class="hgroup"><p class="division">
msgctxt "thag2.20:0.1"
msgid "Theragāthā"
msgstr "Verses of the Senior Monks"

#. HTML: </p><p>
msgctxt "thag2.20:0.2"
msgid "Dukanipāta"
msgstr "The Book of the Twos"

#. HTML: </p><p>
msgctxt "thag2.20:0.3"
msgid "Dutiyavagga"
msgstr "Chapter Two"

#. HTML: </p><h1>
msgctxt "thag2.20:0.4"
msgid "2.20. Sirimattheragāthā"
msgstr "2.20. Sirima"

#. HTML: </h1></div><blockquote class="gatha"><p><a class="sc" id="1"></a><a class="vns" id="vns159"></a><a class="vnp" id="vnp159"></a>
msgctxt "thag2.20:5.1"
msgid "“Pare ca naṃ pasaṃsanti,"
msgstr "If others praise one"

#. HTML: <br>
msgctxt "thag2.20:5.2"
msgid "attā ce asamāhito;"
msgstr "who has no immersion,"

#. HTML: <br>
msgctxt "thag2.20:5.3"
msgid "Moghaṃ pare pasaṃsanti,"
msgstr "they praise in vain,"

#. HTML: <br>
msgctxt "thag2.20:5.4"
msgid "attā hi asamāhito."
msgstr "as one has no immersion."

#. HTML: </p><p><a class="sc" id="2"></a><a class="vns" id="vns160"></a><a class="vnp" id="vnp160"></a>
msgctxt "thag2.20:6.1"
msgid "Pare ca naṃ garahanti,"
msgstr "If others rebuke one"

#. HTML: <br>
msgctxt "thag2.20:6.2"
msgid "attā ce susamāhito;"
msgstr "who does have immersion,"

#. HTML: <br>
msgctxt "thag2.20:6.3"
msgid "Moghaṃ pare garahanti,"
msgstr "they rebuke in vain,"

#. HTML: <br>
msgctxt "thag2.20:6.4"
msgid "attā hi susamāhito”ti."
msgstr "as one does have immersion."

#. HTML: </p></blockquote><p class="endsutta"><a class="pts" id="pts22"></a>
msgctxt "thag2.20:7.1"
msgid "…"
msgstr ""

msgctxt "thag2.20:7.2"
msgid "Sirimā thero …."
msgstr ""

#. HTML: <br>
msgctxt "thag2.20:7.3"
msgid "Vaggo dutiyo."
msgstr ""

#. HTML: </p><p class="uddana">
msgctxt "thag2.20:8.1"
msgid "Tassuddānaṃ"
msgstr ""

#. HTML: </p><blockquote class="uddanagatha"><p><a class="sc" id="3"></a>
msgctxt "thag2.20:9.1"
msgid "Cundo ca jotidāso ca,"
msgstr ""

#. HTML: <br>
msgctxt "thag2.20:9.2"
msgid "thero heraññakāni ca;"
msgstr ""

#. HTML: <br>
msgctxt "thag2.20:9.3"
msgid "Somamitto sabbamitto,"
msgstr ""

#. HTML: <br>
#. VAR: kimilo → kimbilo (bj, s2, s3, pts1-2)
msgctxt "thag2.20:9.4"
msgid "kāḷo tisso ca kimilo;"
msgstr ""

#. HTML: <br>
msgctxt "thag2.20:9.5"
msgid "Nando ca sirimā ceva,"
msgstr ""

#. HTML: <br>
msgctxt "thag2.20:9.6"
msgid "dasa therā mahiddhikāti."
msgstr ""

#. HTML: </p></article></section></section></body></html>
